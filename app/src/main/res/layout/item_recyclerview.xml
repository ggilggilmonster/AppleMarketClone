<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/itemViewLayout"
    android:layout_width="match_parent"
    android:layout_height="150dp"
    android:orientation="horizontal">

    <ImageView
        android:id="@+id/iv_image"
        android:layout_width="110dp"
        android:layout_height="110dp"
        android:layout_marginStart="16dp"
        android:src="@drawable/sample1"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:background="@drawable/rounded_image"
        android:clipToOutline="true"
        android:scaleType="fitCenter"/>

    <TextView
        android:id="@+id/tv_title"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintWidth_percent="0.57"
        android:text="Title"
        android:textColor="@color/black"
        android:textSize="14dp"
        android:ems="25"
        android:maxLines="2"
        android:ellipsize="end"
        app:layout_constraintStart_toEndOf="@+id/iv_image"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="20dp"
        android:layout_marginStart="10dp" />

    <TextView
        android:id="@+id/tv_address"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Address"
        android:textSize="12.5dp"
        android:textColor="@color/dark_grey"
        app:layout_constraintTop_toBottomOf="@+id/tv_title"
        app:layout_constraintStart_toEndOf="@id/iv_image"
        android:layout_marginStart="10dp"
        android:layout_marginTop="3dp" />

    <TextView
        android:id="@+id/tv_price"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Price"
        android:textColor="@color/black"
        android:textSize="18dp"
        android:textStyle="bold"
        app:layout_constraintStart_toEndOf="@id/iv_image"
        android:layout_marginStart="10dp"
        app:layout_constraintTop_toBottomOf="@id/tv_address"
        android:layout_marginTop="3dp" />

    <ImageView
        android:id="@+id/iv_replies"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:src="@drawable/replies"
        app:layout_constraintEnd_toStartOf="@id/tv_replies_num"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginEnd="4dp"
        android:layout_marginBottom="14dp" />

    <TextView
        android:id="@+id/tv_replies_num"
        android:layout_width="20dp"
        android:layout_height="20dp"
        app:layout_constraintEnd_toStartOf="@+id/iv_likes"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="15dp"
        android:layout_marginEnd="3dp"
        android:text="Re"
        android:textSize="14dp"
        android:textColor="@color/main_grey"
        android:gravity="center"/>

    <ImageView
        android:id="@+id/iv_likes"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:src="@drawable/likes"
        app:layout_constraintEnd_toStartOf="@id/tv_likes_num"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginEnd="2dp"
        android:layout_marginBottom="15dp" />
    
    <TextView
        android:id="@+id/tv_likes_num"
        android:layout_width="25dp"
        android:layout_height="20dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginEnd="10dp"
        android:layout_marginBottom="15dp"
        android:textSize="14dp"
        android:text="Likes"
        android:textColor="@color/main_grey"/>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:background="@color/grey" />

</androidx.constraintlayout.widget.ConstraintLayout>